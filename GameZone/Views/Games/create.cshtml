@model CreateGameFormViewModel
@{
    ViewData["Title"] = "Add new Game";
}
<h5>
    <i class=" bi bi-plus-circle-dotted"></i>
    Add new Game
</h5>
<form asp-controller="Games" enctype="multipart/form-data">
    <div class="row">
        <div class="col-md-6">
            <div>
                <label asp-for="Name" class="form-label mt-4"></label>
                <input type="text" class="form-control" asp-for="Name">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="CategoryId" class="form-label mt-4"></label>
                <select class="form-select" asp-for="CategoryId" asp-items="Model.Categories"
                        data-placeholder="Select Category">
                    <option value=""></option>
                </select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="SelectedDevices" class="form-label mt-4"></label>
                <select class="form-select" asp-for="SelectedDevices" asp-items="Model.Devices"
                        data-placeholder="Select Supported Devices">
                    <option></option>
                </select>
                <span asp-validation-for="SelectedDevices" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="Description" class="form-label mt-4"></label>
                <textarea asp-for="Description" class="form-control" placeholder="Write Game Description ...."></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="Cover" class="form-label mt-4"></label>
                <input type="file" class="form-control" asp-for="Cover" 
                data-rule-extension="@SettingFile.Extensions.Replace(".",string.Empty)"
                data-msg-extension="Not Allowed Extension"
                data-rule-filesize="@SettingFile.MaxFileSizeInBytes"
                data-msg-filesize="Max Size Is @SettingFile.MaxFileSizeInMB MB">
                <span asp-validation-for="Cover" class="text-danger"></span>
                <small  class="form-text text-muted">Only @SettingFile.Extensions Allowed </small>
            </div>


            <button type="submit" class="btn btn-light text-black mt-4">Add Game</button>
        </div>
        <div class="col-md-6">
            <img class="Cover-Preview d-none d-flex justify-content-center pt-4" alt="Cover"/>
        </div>
    </div>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/filesize-validator.js" asp-append-version="true"></script>
    <script src="~/js/game-form.js" asp-append-version="true"></script>
    
}